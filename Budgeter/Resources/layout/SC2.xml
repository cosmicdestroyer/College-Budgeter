<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/SC2"
    android:background="#ff05c9fb"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewSC2">
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="1">

            <TextView
                android:text="1. What is College Budgeter?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/InfoQs1SC2"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#ffffff00" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/InfoQs1AnsSC2"
                android:text="Ans: College Budgeter is an app that will help you calculate your monthly expenses while you are/will be at college."
                android:textColor="#ffd50000"
                android:textSize="18dp"
                android:textStyle="normal" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/EmptySpace1SC2" />
            <TextView
                android:text="2. Is the value calculated by this app accurate?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/InfoQs2SC2"
                android:textColor="#ffffff00"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:text="Ans: No."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/InfoQs2AnsSC2"
                android:textStyle="normal"
                android:textColor="#ffd50000"
                android:textSize="18dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/EmptySpace2SC2" />
            <TextView
                android:text="3. How does this app calculate the montly expenses?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/InfoQs3SC2"
                android:textStyle="bold"
                android:textColor="#ffffff00"
                android:textSize="20dp" />
            <TextView
                android:text="Ans: College Budgeter calculates the monthly expenses based on multiple choice questions (with usually one or more fill-ins at the end) on several categories such as Shopping, Transportation,  Utilities etc. "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/InfoQs3AnsSc2"
                android:textStyle="normal"
                android:textSize="18dp"
                android:textColor="#ffd50000" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/EmptySpace3SC2" />
            <TextView
                android:text="4. Does this app store the options and the fill-ins I enter during the usage of this app? "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/InfoQs4SC2"
                android:textColor="#ffffff00"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:text="Ans: No. The app deletes the data selected and entered immediately after the results are given and you click on 'OK', or after exporting the results if you selected that option. "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/InfoQs4AnsSC2"
                android:textColor="#ffd50000"
                android:textStyle="normal"
                android:textSize="18dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/EmptySpace4SC2" />
            <TextView
                android:text="5. Does this app share the results with anyone or any organization?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/InfoQs5SC2"
                android:textColor="#ffffff00"
                android:textStyle="bold"
                android:textSize="20dp" />
            <TextView
                android:text="Ans: No. We value your concerns of your monthly expenses/budget being given to unauthorized people or organizations, and hence we would NEVER, under any circumstance, share the details you enter into this app to anyone or any organization, for any reason."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/InfoQs5AnsSC2"
                android:textColor="#ffd50000"
                android:textSize="18dp"
                android:textStyle="normal" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/EmptySpace5SC2" />
            <TextView
                android:text="6. Does this app contain ads?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/InfoQs6SC2"
                android:textStyle="bold"
                android:textColor="#ffffff00"
                android:textSize="20dp" />
            <TextView
                android:text="Ans: No. We know how annoying ads are for user experience. We faced a tough decison. Ad Revenue and bad User Experience or no ads and good User Experience? We chose the latter."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/InfoQs6AnsSC2"
                android:textColor="#ffd50000"
                android:textStyle="normal"
                android:textSize="18dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/EmptySpace6SC2" />
            <TextView
                android:text="That marks the end of the Info Section. Click on the 'Proceed' button to calculate your monthly expenses/budget."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ConclusiveInfoSC2"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                android:textColor="#ff1a237e"
                android:textSize="19dp" />
            <Button
                android:text="Proceed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnProceedSC2"
                android:backgroundTint="#ff00e5ff"
                android:textStyle="bold"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="30dp" />
        </TableLayout>

    </ScrollView>

</LinearLayout>
