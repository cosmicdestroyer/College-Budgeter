<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/SC2"
    android:background="#ff05c9fb"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtvShpQs1"
        android:textAlignment="center"
        android:textColor="#ff0002e0"
        android:textStyle="italic"
        android:typeface="serif"
        android:paddingBottom="10dp"
        android:textSize="25dp"
        android:text="Shopping (Dresses)" />
     <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ScrollBarSC5" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="1"
            android:id="@+id/TableLaySC5">

        </TableLayout>

    </ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtvSec2Note"
        android:textSize="22dp"
        android:textStyle="bold|italic"
        android:textColor="#ff1a237e"
        android:text="Note: Choose the answer the applies you the most." />

     <TextView
        android:text="1. How many times do you go for shopping dresses every month?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/InfoQs1SC2"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ffffff" />
  <RadioGroup
      android:minWidth="25px"
      android:minHeight="25px"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/rdgrpShpDrQs2Ans">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="1"
        android:id="@+id/rdShpAns2Opt1" />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/rdShpAns2Opt2"
        android:textAppearance="#ffd50000"
         android:textSize="18" />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/rrdShpAns2Opt3" />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 or more"
        android:id="@+id/rrdShpAns1Opt4" />
  </RadioGroup>
    <TextView
                android:text="2.You Typically shop in"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/InfoQs2SC2"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />
    <RadioGroup
      android:minWidth="25px"
      android:minHeight="25px"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/rdgrpShpDrQs1Ans">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Expensive"
        android:id="@+id/rdShpAns1Opt1" />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mid"
        android:id="@+id/rdShpAns1Opt2"
        android:textAppearance="#ffff"
        android:textSize="18" />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cheap"
        android:id="@+id/rrdShpAns1Opt3" />

  </RadioGroup>
    <TextView
                android:text="2. Is the value calculated by this app accurate?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/InfoQs2SC2"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />
    <RadioGroup
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rdgrpShpDrQs3Ans">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Less than or 5"
            android:id="@+id/rdShpAns3Opt1" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/rdShpAns3Opt2" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 or more"
            android:id="@+id/rdShpAns3Opt2" />
    </RadioGroup>
    <Button
        android:text="Proceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ShpbtnProceed" />
    

</LinearLayout>