<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="#ff05c9fb"
    android:id="@+id/SC12">
    <TextView
        android:text="Section 9: Online services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtvSec9TopSC12"
        android:textColor="#ff0002e0"
        android:textSize="23dp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textAlignment="center"
        android:paddingBottom="18dp" />
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ScrollBarSC12">
        <TableLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TableLay12">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSec9Note"
                android:textSize="22dp"
                android:textStyle="bold|italic"
                android:textColor="#ff1a237e"
                android:text="Note: Choose the answer the applies to you the most."
                android:paddingBottom="10dp"
                android:maxLines="5" />
            <TextView
                android:text="1.Do you have/or plan to have any online subscriptions (Netflix, Live Sports, etc.)?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSec9Qs1"
                android:textStyle="bold"
                android:textColor="#ffffff00"
                android:textSize="20dp"
                android:maxLines="6"
                android:paddingBottom="5dp" />
            <RadioGroup
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rdgrpSec9Qs1Ans" >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:id="@+id/rdbtnSec9Qs1Opt1"
                    android:buttonTint="#ffd50000"
                    android:textColor="#ffd50000"
                    android:textSize="18dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:id="@+id/rdbtnSec9Qs1Opt2"
                    android:buttonTint="#ffd50000"
                    android:textColor="#ffd50000"
                    android:textSize="18dp" />
            </RadioGroup>
            <TextView
                android:text="2. Select your preferred way to answer the next question:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSec9Qs2"
                android:textStyle="bold"
                android:textColor="#ffffff00"
                android:textSize="20dp"
                android:maxLines="4"
                android:paddingBottom="5dp" />
            <RadioGroup
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rdgrpSec9Qs2Ans" >
                <RadioButton
                    android:text="Select the number of subcriptions you have and let the app calculate an aproximate value (less accurate)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rdbtnSec9Qs2Opt1"
                    android:buttonTint="#ffd50000"
                    android:textColor="#ffd50000"
                    android:textSize="18dp"
                    android:paddingBottom="5dp" />
                <RadioButton
                    android:text="Calculate the monthly cost of all the subscriptions you have and enter it in a textbox (more accurate)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rdbtnSec9Qs2Opt2"
                    android:textSize="18dp"
                    android:buttonTint="#ffd50000"
                    android:textColor="#ffd50000"/>
            </RadioGroup>
            <TextView
                android:text="3.Select the amount of online subscriptions you plan to have:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSec9Qs3"
                android:textStyle="bold"
                android:textColor="#ffffff00"
                android:textSize="20dp"
                android:maxLines="5"
                android:paddingBottom="5dp" />
            <RadioGroup
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rdgrpSec9Qs3Ans" >
                <RadioButton
                    android:text="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rdbtnSec9Qs3Opt1"
                    android:buttonTint="#ffd50000"
                    android:textSize="18dp"
                    android:textColor="#ffd50000"
                    android:paddingBottom="5dp"/>
                <RadioButton
                    android:text="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rdbtnSec9Qs3Opt2"
                    android:buttonTint="#ffd50000"
                    android:textSize="18dp"
                    android:textColor="#ffd50000"
                    android:paddingBottom="5dp"/>
                <RadioButton
                    android:text="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rdbtnSec9Qs3Opt3"
                    android:buttonTint="#ffd50000"
                    android:textSize="18dp"
                    android:textColor="#ffd50000"
                    android:paddingBottom="5dp"/>
                <RadioButton
                    android:text="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rdbtnSec9Qs3Opt4"
                    android:buttonTint="#ffd50000"
                    android:textSize="18dp"
                    android:textColor="#ffd50000"
                    android:paddingBottom="5dp"/>
                <RadioButton
                    android:text="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rdbtnSec9Qs3Opt5"
                    android:buttonTint="#ffd50000"
                    android:textSize="18dp"
                    android:textColor="#ffd50000"
                    android:paddingBottom="5dp"/>
                <RadioButton
                    android:text="6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rdbtnSec9Qs3Opt6"
                    android:buttonTint="#ffd50000"
                    android:textSize="18dp"
                    android:textColor="#ffd50000"
                    android:paddingBottom="5dp"/>
                <RadioButton
                    android:text="7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rdbtnSec9Qs3Opt7"
                    android:buttonTint="#ffd50000"
                    android:textSize="18dp"
                    android:textColor="#ffd50000"
                    android:paddingBottom="5dp"/>
                <RadioButton
                    android:text="8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rdbtnSec9Qs3Opt8"
                    android:buttonTint="#ffd50000"
                    android:textSize="18dp"
                    android:textColor="#ffd50000"
                    android:paddingBottom="5dp"/>
                <RadioButton
                    android:text="9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rdbtnSec9Qs3Opt9"
                    android:buttonTint="#ffd50000"
                    android:textSize="18dp"
                    android:textColor="#ffd50000"
                    android:paddingBottom="5dp"/>
                <RadioButton
                    android:text="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rdbtnSec9Qs3Opt10"
                    android:buttonTint="#ffd50000"
                    android:textSize="18dp"
                    android:textColor="#ffd50000"
                    android:paddingBottom="5dp"/>
                <RadioButton
                    android:text="I have more than 10 online services that I pay for"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rdbtnSec9Qs3Opt2"
                    android:textSize="18dp"
                    android:buttonTint="#ffd50000"
                    android:textColor="#ffd50000"/>
            </RadioGroup>
            <TextView
                android:text="3. Enter in the total monthly expense (in $) for all your online subscriptions in the textbox below:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSec9Qs3a"
                android:textStyle="bold"
                android:textColor="#ffffff00"
                android:textSize="20dp"
                android:maxLines="6"
                android:paddingBottom="5dp" />
            <EditText
                android:inputType="number|numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtSec9Qs3aAmnt"
                android:layout_marginRight="275dp"
                android:maxLines="1"
                android:hint="$" />
            <TextView
                android:text="Click on the 'Proceed' button below to view the results:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ConclusiveInfoSC12"
                android:textColor="#ff1a237e"
                android:textStyle="bold|italic"
                android:textSize="19dp"
                android:textAlignment="center"
                android:maxLines="5"
                android:paddingTop="10dp" />
            <Button
                android:text="Proceed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnProceedSC12"
                android:backgroundTint="#ff00e5ff"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="10dp"
                android:textColor="#ff000000" />
            <Button
                android:text="Back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnBackSC12"
                android:backgroundTint="#ff00e5ff"
                android:textStyle="bold"
                android:layout_marginRight="230dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-49dp"
                android:textColor="#ff000000"/>
        </TableLayout>

    </ScrollView>

</LinearLayout>
