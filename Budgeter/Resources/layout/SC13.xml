<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="#ff05c9fb"
    android:id="@+id/SC13">
    <TextView
        android:text="Results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtvSC13Top"
        android:textColor="#ff0002e0"
        android:textSize="23dp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textAlignment="center"
        android:paddingBottom="18dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtvSC13Note"
        android:textSize="22dp"
        android:textStyle="bold|italic"
        android:textColor="#ff1a237e"
        android:text="Note: The costs listed below are only an approximate."
        android:paddingBottom="10dp"
        android:maxLines="3" />
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ScrollBarSC13">
        <TableLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TableLay13">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSC13Sec1Lbl"
                android:textStyle="bold"
                android:textColor="#ffffff00"
                android:textSize="20dp"
                android:maxLines="3"
                android:paddingBottom="5dp"
                android:text="1. Total cost for Section 1 [Shopping (Dresses)]:" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSec1Total"
                android:hint="$"
                android:textColor="#ff000000"
                android:contextClickable="false"
                android:textSize="18dp"
                android:layout_marginRight="275dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSC13Sec2Lbl"
                android:textStyle="bold"
                android:textColor="#ffffff00"
                android:textSize="20dp"
                android:maxLines="3"
                android:paddingBottom="5dp"
                android:text="2. Total cost for Section 2 (Transportation):"
                android:paddingTop="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSec2Total"
                android:hint="$"
                android:textColor="#ff000000"
                android:contextClickable="false"
                android:textSize="18dp"
                android:layout_marginRight="275dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSC13Sec3Lbl"
                android:textStyle="bold"
                android:textColor="#ffffff00"
                android:textSize="20dp"
                android:maxLines="3"
                android:paddingBottom="5dp"
                android:text="3. Total cost for Section 3 (Type of House):"
                android:paddingTop="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSec3Total"
                android:hint="$"
                android:textColor="#ff000000"
                android:contextClickable="false"
                android:textSize="18dp"
                android:layout_marginRight="275dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSC13Sec4Lbl"
                android:textStyle="bold"
                android:textColor="#ffffff00"
                android:textSize="20dp"
                android:maxLines="5"
                android:paddingBottom="5dp"
                android:text="4. Total cost for Section 4 [Utilities (Internet, Mobile and Cable Plans)]:"
                android:paddingTop="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSec4Total"
                android:hint="$"
                android:textColor="#ff000000"
                android:contextClickable="false"
                android:textSize="18dp"
                android:layout_marginRight="275dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSC13Sec5Lbl"
                android:textStyle="bold"
                android:textColor="#ffffff00"
                android:textSize="20dp"
                android:maxLines="3"
                android:paddingBottom="5dp"
                android:text="5. Total cost for Section 5 (Monthly Bills):"
                android:paddingTop="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSec5Total"
                android:hint="$"
                android:textColor="#ff000000"
                android:contextClickable="false"
                android:textSize="18dp"
                android:layout_marginRight="275dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSC13Sec6Lbl"
                android:textStyle="bold"
                android:textColor="#ffffff00"
                android:textSize="20dp"
                android:maxLines="3"
                android:paddingBottom="5dp"
                android:text="6. Total cost for Section 6 (Insurance):"
                android:paddingTop="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSec6Total"
                android:hint="$"
                android:textColor="#ff000000"
                android:contextClickable="false"
                android:textSize="18dp"
                android:layout_marginRight="275dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSC13Sec7Lbl"
                android:textStyle="bold"
                android:textColor="#ffffff00"
                android:textSize="20dp"
                android:maxLines="3"
                android:paddingBottom="5dp"
                android:text="7. Total cost for Section 7 (Eating Costs):"
                android:paddingTop="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSec7Total"
                android:hint="$"
                android:textColor="#ff000000"
                android:contextClickable="false"
                android:textSize="18dp"
                android:layout_marginRight="275dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSC13Sec8Lbl"
                android:textStyle="bold"
                android:textColor="#ffffff00"
                android:textSize="20dp"
                android:maxLines="3"
                android:paddingBottom="5dp"
                android:text="8. Total cost for Section 8 (Home Maintenance):"
                android:paddingTop="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSec8Total"
                android:hint="$"
                android:textColor="#ff000000"
                android:contextClickable="false"
                android:textSize="18dp"
                android:layout_marginRight="275dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSC13Sec9Lbl"
                android:textStyle="bold"
                android:textColor="#ffffff00"
                android:textSize="20dp"
                android:maxLines="3"
                android:paddingBottom="5dp"
                android:text="9. Total cost for Section 9 (Online Services):"
                android:paddingTop="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSec9Total"
                android:hint="$"
                android:textColor="#ff000000"
                android:contextClickable="false"
                android:textSize="18dp"
                android:layout_marginRight="275dp" />
            <TextView
                android:text="Combined Cost of all the Sections:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSC13TotalLbl"
                android:textColor="#ff1a237e"
                android:textStyle="bold|italic"
                android:textSize="20dp"
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                android:textAlignment="center"
                android:maxLines="2" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvAllSectionsTotal"
                android:hint="$"
                android:textColor="#ff000000"
                android:contextClickable="false"
                android:textSize="18dp"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="100dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvConclusiveInfoSC13"
                android:text="Click on the 'Save Results' button to export the costs to a .txt file. Click on the 'Exit' button to quit the application. 
Thank You for using College Budgeter!"
                android:textColor="#ffd81b60"
                android:contextClickable="false"
                android:textSize="22dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textStyle="bold|italic"
                android:textAlignment="center"
                android:maxLines="10" />
            <Button
                android:text="Save Results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnSaveSC13"
                android:backgroundTint="#ff00e5ff"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="10dp"
                android:textColor="#ff000000" />
            <Button
                android:text="Exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnExitSC13"
                android:backgroundTint="#ff00e5ff"
                android:textStyle="bold"
                android:layout_marginRight="250dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-49dp"
                android:textColor="#ff000000"/>
        </TableLayout>

    </ScrollView>

</LinearLayout>
